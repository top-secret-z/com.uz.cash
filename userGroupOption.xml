<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/2019/userGroupOption.xsd">
	<import>
		<categories>
			<category name="admin.cash">
				<parent>admin.application</parent>
			</category>
			<category name="user.cash">
				<parent>user</parent>
			</category>
		</categories>
		
		<options>
			<!-- admin -->
			<option name="admin.cash.canManage">
				<categoryname>admin.cash</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
				<usersonly>1</usersonly>
			</option>
			
			<!-- user -->
			<option name="user.cash.isPayer">
				<categoryname>user.cash</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<usersonly>1</usersonly>
			</option>
			
			<option name="user.cash.canSeeStatements">
				<categoryname>user.cash</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<userdefaultvalue>0</userdefaultvalue>
				<moddefaultvalue>0</moddefaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
			</option>
			
			<option name="user.cash.canSeeBalance">
				<categoryname>user.cash</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<userdefaultvalue>1</userdefaultvalue>
				<moddefaultvalue>1</moddefaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
			</option>
			
			<option name="user.cash.canManage">
				<categoryname>user.cash</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
				<usersonly>1</usersonly>
			</option>
		</options>
	</import>
</data>